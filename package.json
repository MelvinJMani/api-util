{
  "name": "api-util",
  "version": "1.0.0",
  "description": "A lightweight, modular API utility plugin for JavaScript applications with two versions: one based on fetch and another based on axios.",
  "main": "index.js",
  "repository": "https://github.com/MelvinJMani/api-util.git",
  "author": "Melvin Joseph Mani <melvinjmani@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest test",
    "test:coverage": "jest test --coverage",
    "compile": "tsc src/FetchApiClient.ts --outDir playground/js",
    "dev": "http-server -o ./playground/ -p 4000",
    "lint": "biome lint --skip=style --skip=suspicious/noExplicitAny --write ./src",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/jest": "^29.5.14",
    "fetch-mock": "^12.1.0",
    "http-server": "^14.1.1",
    "husky": "^9.1.6",
    "jest": "^29.7.0",
    "jest-fetch-mock": "^3.0.3",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.2.10",
    "ts-jest": "^29.2.5",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.js": ["biome lint", "yarn test --findRelatedTests", "git add"],
    "*.ts": ["biome lint", "yarn test --findRelatedTests", "git add"]
  }
}
